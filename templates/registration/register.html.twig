{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container bg-light mt-2">

    <div class="row">
        <div class="col-lg-6 md-12 m-auto my-3">
        
            <h1 class="text-center">Inscription</h1>
            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm) }}
                {# Champ "Nom" avec une icône avant #}
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    {{ form_widget(registrationForm.name, {'attr': {'placeholder': ' Nom'}}) }}
                </div>
                {# Champ "Prénom" #}
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    {{ form_widget(registrationForm.prenom,{'attr':{'placeholder':'Prénom'}}) }}
                </div>

                {# Champ "Email" #}
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    {{ form_widget(registrationForm.email,{'attr':{'placeholder':' E-mail'}}) }}
                </div>

                    {# Champ "Mot de passe" et "Confirmation du mot de passe" #}
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Entrer votre mot de passe'}}) }}
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'placeholder': 'Confirmer votre mot de passe'}}) }}
                </div>

                
                
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">S'inscrire</button>
                    <p class="text-center text-muted">
                        En cliquant sur s'inscrire, vous acceptez nos <a href="">Conditions générales</a>, notre <a href="">Politique de 
                        de confidantialité</a> et  notre <a href="">Politique d'utilisation</a> des cookies.
                    </p>
                    <p class="text-center">Avez vous déjà un compte ? <a href={{path('app_login')}}>Connexion</a></p>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

</div>
    
{% endblock %}

